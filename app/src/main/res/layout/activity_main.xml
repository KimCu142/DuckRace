<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Thanh điều khiển -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số vịt:"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:paddingEnd="8dp"/>

        <Spinner
            android:id="@+id/spDuckCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- đẩy phần còn lại sang phải -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Start / Reset -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginStart="8dp"
            />
        <Button
            android:id="@+id/btnPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <!-- Coin Display Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coin_display_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:elevation="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_coin"
                android:layout_marginEnd="6dp"
                android:contentDescription="Coin icon" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#B8860B"
                android:textSize="16sp"
                android:minWidth="40dp"
                android:gravity="center" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddCoin"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_add_coin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add coin"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:elevation="2dp" />


    </LinearLayout>

    <!-- Khung đường đua + vạch đích -->
    <FrameLayout
        android:id="@+id/trackFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/controls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/lanesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"/>
        </ScrollView>

        <!-- Vạch đích (đỏ, toàn chiều cao) -->
        <View
            android:id="@+id/finishLine"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#E53935"
            android:alpha="0.9"/>
    </FrameLayout>

    <!-- Overlay đếm ngược -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@id/trackFrame"
        app:layout_constraintBottom_toBottomOf="@id/trackFrame"
        app:layout_constraintStart_toStartOf="@id/trackFrame"
        app:layout_constraintEnd_toEndOf="@id/trackFrame"/>

    <Button
        android:id="@+id/btnBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt cược"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>