<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Floating Controls -->
    
    <!-- Duck Count Selector (Right Column) -->
    <LinearLayout
        android:id="@+id/duckCountSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/coin_display_background"
        android:padding="8dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/controlButtons"
        app:layout_constraintEnd_toEndOf="@id/controlButtons"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số vịt:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:paddingEnd="4dp"/>

        <Spinner
            android:id="@+id/spDuckCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"/>

    </LinearLayout>

    <!-- Control Buttons (Top Right) -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try"
            android:layout_marginEnd="4dp"
            android:background="@drawable/coin_display_background"
            android:textSize="12sp"
            android:minWidth="60dp"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginEnd="4dp"
            android:background="@drawable/coin_display_background"
            android:textSize="12sp"
            android:minWidth="60dp"/>

        <Button
            android:id="@+id/btnPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:background="@drawable/coin_display_background"
            android:textSize="12sp"
            android:minWidth="60dp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <!-- Coin Display (Right Column) -->
    <LinearLayout
        android:id="@+id/coinDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/coin_display_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/duckCountSelector"
        app:layout_constraintStart_toStartOf="@id/duckCountSelector"
        app:layout_constraintEnd_toEndOf="@id/duckCountSelector"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_coin"
            android:layout_marginEnd="6dp"
            android:contentDescription="Coin icon" />

        <TextView
            android:id="@+id/tvCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#B8860B"
            android:textSize="16sp"
            android:minWidth="40dp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnAddCoin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add_coin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add coin"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Khung đường đua + vạch đích -->
    <FrameLayout
        android:id="@+id/trackFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nền sân (yard) chứa các lane -->
        <ImageView
            android:id="@+id/yardBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yard"
            android:scaleType="centerCrop"
            android:alpha="0.7"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:translationY="44dp">

            <LinearLayout
                android:id="@+id/lanesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <!-- Vạch đích (đỏ, toàn chiều cao) -->
        <View
            android:id="@+id/finishLine"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#E53935"
            android:alpha="0.9"/>
    </FrameLayout>

    <!-- Overlay đếm ngược -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt cược"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
