<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Left Panel - Balance & Input -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cute_duck_animated_set_1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Up Coins"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <!-- Current Balance Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_coin"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCurrentBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" coins"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Amount Input Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter amount:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTopupAmount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="e.g. 1000"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="2dp"/>

        <!-- Top Up Button -->
        <Button
            android:id="@+id/btnTopUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸª™ TOP UP NOW"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <!-- Right Panel - Quick Select -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Quick Select Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ Quick Select"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <!-- Quick Amount Grid -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnQuick100"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="100"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnQuick500"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="500"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnQuick1000"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="1,000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnQuick2000"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="2,000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnQuick5000"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="5,000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:id="@+id/btnQuick10000"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:text="10,000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>


            </LinearLayout>

        </LinearLayout>

        <!-- Promotional Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="More coins = More races!"
                android:textSize="12sp"
                android:textColor="#E65100"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Duck Animation -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/duck_animation"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>