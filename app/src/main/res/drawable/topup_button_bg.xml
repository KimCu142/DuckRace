<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/topup_button_pressed"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/topup_button_color"
                android:endColor="@color/topup_primary_color"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>