<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#6EC3F4"
                android:endColor="#B3E5FC"
                android:angle="270" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="120dp" />
            <solid android:color="#6ABF69" />
            <corners android:radius="0dp" />
            <padding android:top="0dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="96dp" />
            <solid android:color="#7EC8E3" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="24dp" />
            <solid android:color="#65A0C8" />
        </shape>
    </item>
</layer-list>

